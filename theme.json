{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"postTypes": [
				"page",
				"post"
			],
			"title": "Blank"
		},
		{
			"name": "404",
			"postTypes": [
				"page"
			],
			"title": "404"
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "rgb(38, 11, 59)",
					"name": "Deep Violet",
					"slug": "contrast"
				},
				{
					"color": "#FDD999",
					"name": "Pigment Orange",
					"slug": "pigment-orange"
				},
				{
					"color": "#F6A113",
					"name": "Streaky Orange",
					"slug": "streaky-orange"
				},
				{
					"color": "#FFEE93",
					"name": "Crispy Yellow",
					"slug": "crispy-yellow"
				},
				{
					"color": "#FBF5E3",
					"name": "Gallery Off-White",
					"slug": "gallery-off-white"
				},
				{
					"color": "#B3B6FE",
					"name": "Pigment Purple",
					"slug": "pigment-purple"
				},
				{
					"color": "#410B1E",
					"name": "Sizzling Brown",
					"slug": "sizzling-brown"
				},
				{
					"color": "#FFC2A9",
					"name": "Uncured Pink",
					"slug": "uncured-pink"
				},
				{
					"color": "#C91C3F",
					"name": "Cured Red",
					"slug": "cured-red"
				}
			]
		},
		"layout": {
			"contentSize": "100%",
			"wideSize": "calc( 100% - var(--wp--preset--spacing--outer) - var(--wp--preset--spacing--outer)  )"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "clamp(1.5rem, 5.5556vw, 80px)",
					"slug": "outer",
					"name": "Outer"
				},
				{
					"size": "1rem",
					"slug": "1",
					"name": "1"
				},
				{
					"size": "2rem",
					"slug": "2",
					"name": "2"
				},
				{
					"size": "3rem",
					"slug": "3",
					"name": "3"
				},
				{
					"size": "4rem",
					"slug": "4",
					"name": "4"
				},
				{
					"size": "5rem",
					"slug": "5",
					"name": "5"
				},
				{
					"size": "6rem",
					"slug": "6",
					"name": "6"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw",
        "svh",
        "svw"
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Residenz Grotesk",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/ResidenzGrotesk-Regular.woff2"
							]
						}
					],
					"fontFamily": "\"Residenz Grotesk\", sans-serif",
					"name": "Residenz Grotesk",
					"slug": "residenz-grotesk"
				}
			],
			"fontSizes": [
				{
          "fluid": false,
					"size": "clamp(12px, 0.48rem, 1.8vw)",
					"slug": "caption",
          "name": "Caption"
				},
				{
          "fluid": false,
					"size": "clamp(14px, 0.6rem, 2vw)",
					"slug": "body-xs",
          "name": "Body XS"
				},
				{
          "fluid": false,
					"size": "clamp(16px, 0.8rem, 2.113vw)",
					"slug": "body-s",
          "name": "Body S"
				},
				{
          "fluid": false,
					"size": "clamp(18px, 1rem, 2.64vw)",
					"slug": "body-m",
          "name": "Body M"
				},
        {
          "fluid": false,
          "size": "clamp(20px, 1.4rem, 3.7vw)",
          "slug": "body-l",
          "name": "Body L"
        },
        {
          "fluid": false,
          "size": "clamp(22px, 2rem, 5.333vw)",
          "slug": "h-4",
          "name": "H4"
        },
        {
          "fluid": false,
          "size": "clamp(25px, 3rem, 8vw)",
          "slug": "h-3",
          "name": "H3"
        },
        {
          "fluid": false,
          "size": "clamp(28px, 3.6rem, 10vw)",
          "slug": "h-2",
          "name": "H2"
        },
        {
          "fluid": false,
          "size": "clamp(32px, 6rem, 16vw)",
          "slug": "h-1",
          "name": "H1"
        }
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/navigation": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body-s)"
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body-s)"
				}
			},
			"core/post-content": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--streaky-orange)"
						}
					}
				}
			},
			"core/post-excerpt": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body-m)"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body-s)",
					"fontWeight": "400"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body-s)"
				}
			},
			"core/post-title": {
				"spacing": {
					"margin": {
						"bottom": "1.25rem",
						"top": "1.25rem"
					}
				},
				"typography": {
					"fontWeight": "400",
          "fontSize": "var(--wp--preset--font-size--h-2)"
				},
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/pullquote": {
				"border": {
					"style": "solid",
					"width": "1px 0"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--body-s)",
							"fontStyle": "normal",
							"textTransform": "none"
						}
					}
				},
				"typography": {
					"lineHeight": "1.3"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--2) !important",
						"top": "var(--wp--preset--spacing--2) !important"
					}
				}
			},
			"core/query": {
				"elements": {
					"h2": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--h-2)"
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body-s)",
					"fontWeight": "400"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/quote": {
				"border": {
					"width": "1px"
				},
        "typography": {
          "lineHeight": "1.2"
        },
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--body-s)",
							"fontStyle": "normal"
						}
					}
				},
				"spacing": {
					"padding": {
						"left": "var(--wp--preset--spacing--1)",
						"right": "var(--wp--preset--spacing--1)"
					}
				}
			},
			"core/site-title": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--streaky-orange)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body-m)",
					"fontWeight": "normal",
					"lineHeight": "1.2"
				}
			},
      "core/list-item": {
        "spacing": {
          "margin": {
            "bottom": "1em"
          }
        }
      }
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "2em"
				},
        "typography": {
          "fontSize": "var(--wp--preset--font-size--body-s)",
          "lineHeight": "1"
        },
        "spacing": {
          "padding": {
            "top": "0.6em",
            "right": "0.75em",
            "bottom": "0.5em",
            "left": "0.75em"
          }
        },
				"color": {
					"background": "var(--wp--preset--color--contrast)",
					"text": "var(--wp--preset--color--pigment-purple)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--pigment-purple)",
						"text": "var(--wp--preset--color--contrast)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--contrast)",
						"text": "var(--wp--preset--color--pigment-purple)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--pigment-purple)",
						"text": "var(--wp--preset--color--contrast)"
					}
				},
				":visited": {
					"color": {
						"text": "var(--wp--preset--color--pigment-purple)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h-1)",
					"lineHeight": "0.95"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h-2)",
					"lineHeight": "1"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h-3)",
          "lineHeight": "1"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--h-4)",
          "lineHeight": "1"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body-l)",
          "lineHeight": "1.1"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body-m)"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "400",
					"lineHeight": "1.2"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "underline dashed"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--streaky-orange)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				"typography": {
					"textDecoration": "underline"
				}
			}
		},
		"spacing": {
			"blockGap": "1rem",
			"padding": {
				"top": "0",
				"right": "0",
				"bottom": "0",
				"left": "0"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--residenz-grotesk)",
			"fontSize": "16px",
			"lineHeight": "1.2"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "uncategorized",
			"name": "comments",
			"title": "Comments"
		},
		{
			"area": "uncategorized",
			"name": "post-meta",
			"title": "Post Meta"
		}
	]
}
